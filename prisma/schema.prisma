// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  files         File[]
  verificationTokens VerificationToken[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [identifier], references: [email])

  @@id([identifier, token])
}

// 数据模型
model File {
  id            String     @id @default(uuid())
  filename      String     // 原始文件名
  hash          String     @unique // 文件名哈希，用于唯一标识文件
  size          Int        // 文件大小（字节）
  lastModified  Int        // 文件最后修改时间戳
  createdAt     DateTime   @default(now())
  mergedAt      DateTime?  // 文件合并完成时间
  chunks        Chunk[]    // 关联的文件分片
  uploaded      Boolean    @default(false) // 是否已完成上传和合并
  path          String?    // 合并后文件存储路径
  uploadId      String?    // 分片上传任务ID
  uploadChunks  Int        @default(0) //已上传分片数量
  totalChunks   Int        @default(0) //总分片数量
  userId        String?
  user          User?      @relation(fields: [userId], references: [id])
}

// 文件分片模型
model Chunk {
  id            String   @id @default(uuid())
  index         Int      // 分片索引
  hash          String   // 分片内容哈希
  fileNameHash  String   // 所属文件的哈希
  uploadedAt    DateTime @default(now())
  etag          String   // 新增：存储OSS返回的ETag
  file          File     @relation(fields: [fileNameHash], references: [hash])
  @@unique([fileNameHash, index])
}